@model IEnumerable<MvcBlog.Models.BlogPost>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <h2>All Blog Posts</h2>
    <a asp-action="Create">Create New</a>
    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Find by title: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Search" class="btn btn-default" /> |
                <a asp-action="Index">Back to Full List</a>
            </p>
        </div>
    </form>
</div>
<hr />
<div class="container pt-2">
    <div class="row">
        <div class="col-6">
            <a asp-action="Index" asp-route-sortorder="@ViewData["TitleSortParm"]">Title</a>
        </div>
        <div class="col-6">
            <a asp-action="Index" asp-route-sortorder="@ViewData["DateSortParm"]">Date</a>
        </div>
    </div>
    @foreach (var item in Model)
    {
        <hr />
        <div class="row">
            <div class="col-6">
                @Html.DisplayFor(modelItem => item.Title)
            </div>
            <div class="col-6">
                @Html.DisplayFor(modelItem => item.CreateDate)
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label>Tags:</label>
                @foreach (BlogPostTag tag in item.Tags)
                {
                    <span style="display:inline">@Html.DisplayFor(tagItem => tag.TagName)&nbsp;</span>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </div>
        </div>
    }
</div>

