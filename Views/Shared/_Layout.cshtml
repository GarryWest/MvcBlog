<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" title="MVC Blog" />
    <meta name="image" content="https://garrywest.com/blog.png" />
    <title>MVC Blog</title>

    <!-- Montserrat Font -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Material Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

    <!-- Leaflet CSS -->
    <link href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/MvcBlog.styles.css" asp-append-version="true" /><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" /> *@

</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg bg-light shadow">
            <div class="container-fluid">
                <a class="navbar-link" href="/">
                    <span class="material-symbols-outlined me-1">
                        devices
                    </span>
                    Garry West
                </a>
                <a class="navbar-link" href="/BlogPost">
                    <span class="material-symbols-outlined">
                        article
                    </span>
                    Blog
                </a>
                <button type="button"
                        class="navbar-toggler"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="container px-3">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto me-4 my-3 my-lg-0">
                            <li class="nav-item">
                                <a class="nav-link me-lg-2" href="#about">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link me-lg-2" href="#projects">Projects</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link me-lg-2" href="#testimonials">Testimonials</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link me-lg-2" href="#contact">Contact</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        <!-- End Navbar -->
    </header>
    <div class="container main">
        <main role="main" class="pb-3">
            <div class="row m-1 p-1">
                <div class="col-9">
                    @RenderBody()
                </div>
                <div id="tags" class="col-3">
                    @await Component.InvokeAsync("TagNavigation", new { selectedTag = ViewData["CurrentTag"] })
                </div>
            </div>
        </main>
    </div>
    
    <footer class="border-top footer text-muted">
        <section>
                &copy; 2024 - Garry West - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </section>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
