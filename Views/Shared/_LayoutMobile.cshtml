<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" title="MVC Blog" />
    <meta name="image" content="https://garrywest.com/blog.png" />
    <title>MVC Blog</title>

    <!-- Montserrat Font -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Material Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

    <!-- Leaflet CSS -->
    <link href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/MvcBlog.styles.css" asp-append-version="true" /><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" /> *@

</head>
<body>
    <header>
        <!-- Nav -->
        <nav id="nav">
            <div class="container-fluid">
                <!-- Hamburger Icon -->
                <div class="hamburger" onclick="toggleMenu(event)">☰</div>
                <ul class="container">
                    <li><a href="/">Home</a></li>
                    <li><a href="/#projects">Projects</a></li>
                    <li><a href="/#testimonials">Testimonials</a></li>
                    <li><a href="/BlogPost">Blog</a></li>
                    <li><a href="/#contact">Contact</a></li>
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </nav>
    </header>
    <div class="container main">
        <main role="main" class="pb-3">
            <div class="row m-1">
                <div id="tags" class="col-12">
                    @await Component.InvokeAsync("TagNavigation", new { selectedTag = ViewData["CurrentTag"], Layout = "mobile" })
                </div>
            </<div>
            <div class="row m-1">
                <div class="col-12">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>
    
    <footer class="border-top footer text-muted">
        <section>
                &copy; 2024 - Garry West - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </section>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Toggle the menu when the hamburger icon is clicked
        function toggleMenu(event) {
            // Find the <ul> element within the same parent container
            const navUl = event.target.closest(".container-fluid").querySelector("ul");
            navUl.classList.toggle("active");
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
