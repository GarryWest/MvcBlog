@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutSansTags";
}


    <!-- Hero -->
    <header class="bg-light py-5">
        <div class="container px-5">
            <div class="row align-items-center">
                <div class="col-lg-8 col-xl-7 col-xxl-6">
                    <div class="my-5">
                        <h2 class="text-center fw-bold mb-2">Hi! I am Garry,</h2>
                        <h2 class="text-primary text-center fw-bold mb-2">a full-stack developer employing Microsoft technologies</h2>
                        <p class="lead mb-4">
                            I specialize in building business solutions with .NET Framework, ASP.NET Core MVC and MS SQL Server.
                            Scroll down to see what I have been working on.
                        </p>
                        <div class="d-grid gap-3 d-sm-flex justify-content-center">
                            <a class="btn btn-primary btn-large text-uppercase" href="#about">
                                Learn More
                                <span class="material-symbols-outlined ms-2">
                                    help_center
                                </span>
                            </a>
                            <a class="btn btn-secondary btn-large text-uppercase" href="#projects">
                                View My Work
                                <span class="material-symbols-outlined ms-2">
                                    feature_search
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-xl-5 col-xxl-6 justify-content-center">
                    <img class="img-fluid rounded-3 my-5" src="images/retrieverheadshot.jfif" alt="Hero Image">
                </div>
            </div>
        </div>
    </header>
    <!-- End Hero -->

    <main>
        <!-- About -->
        <section id="about" class="py-3">
            <div class="container py-5">
                <div class="row justify-content-center">
                    <h2 class="fw-bold">About</h2>
                    <p class="lead mb-5">
                        I am a software developer who builds elegant, fast, and
                        scalable business applications.
                    </p>
                </div>
            </div>
            <div class="container mb-5">
                <div class="row">
                    <div class="col-lg-4 mx-auto mb-5">
                        <div class="d-flex mb-5 about">
                            <span class="material-symbols-outlined m-auto text-primary">palette</span>
                        </div>
                        <h3>Design</h3>
                        <p class="lead mb-0">
                            I work with all categories of stakeholders to identify challenges and needs, and to
                            offer the most cost-effective, reliable solutions.
                        </p>
                    </div>
                    <div class="col-lg-4 mx-auto mb-5">
                        <div class="d-flex mb-5 about">
                            <span class="material-symbols-outlined m-auto text-primary">code</span>
                        </div>
                        <h3>Development</h3>
                        <p class="lead mb-0">
                            I develop responsive applications that are fast and scalable. I have employed developer/unit testing
                            as well as collaborated with QA teams and business for behavioral-driven development. I have worked on
                            agile teams, applying the best standards and coding practices.
                        </p>
                    </div>
                    <div class="col-lg-4 mx-auto mb-5">
                        <div class="d-flex mb-5 about">
                            <span class="material-symbols-outlined m-auto text-primary">admin_panel_settings</span>
                        </div>
                        <h3>Launch & Maintenance</h3>
                        <p class="lead mb-0">
                            I have deployed many applications both as an individual contributor and as part
                            of larger group efforts. My documentation is thorough, and I am happy to provide
                            additional information whenever needed. I like working with customers and co-workers within my own group 
                            as well as those outside the work group / company.
                        </p>
                    </div>
                </div>
            </div>
            <div class="container mb-5">
                <div class="row col-12">
                    <h2 class="mb-3">Certifications</h2>
                    <ul>
                        <li class="lead">Microsoft Certified: Power Platform Developer Associate – PL-400</li>
                        <li class="lead">Microsoft Certified: Power BI Analyst Associate - PL-300</li>
                        <li class="lead">Microsoft Certified: Power Platform Fundamentals – PL-900</li>
                        <li class="lead">Microsoft Certified: Azure Data Fundamentals – DP-900</li>
                        <li class="lead">Microsoft Certified: Azure AI Fundamentals – AI-900</li>
                        <li class="lead">Microsoft Certified: Azure Fundamentals – AZ-900</li>
                        <li class="lead">MCSA: Web Applications – Microsoft</li>
                        <li class="lead">MS: Programming in C# - Microsoft</li>
                    </ul> 
                </div>
            </div>
        </section>
        
        <!-- End About -->

        <hr>

        <!-- Projects -->
        <section id="projects" class="text-center py-3">
            <div class="container py-5">
                <div class="row justify-content-center">
                    <h2 class="fw-bold">Projects</h2>
                    <p class="lead mb-5">View some of my latest projects</p>
                </div>
            </div>
            <div class="container mb-5">
                <div class="row">
                    <div class="col-lg-4 mx-auto mb-5">
                        <div class="card h-100 shadow-lg border-0 bg-light">
                            <a asp-area="" asp-controller="BlogPost" asp-action="Index"
                               asp-route-currentFilter=""
                               asp-route-currentTag=""
                               asp-route-searchTag="">
                                <img class="card-img-top" src="images/project1.png" alt="Project 1" />
                                <div class="card-body p-4">
                                    <h3 class="card-title mb-3">MVC Blog</h3>
                                    <div class="mb-2">
                                        <div class="badge bg-primary rounded-pill">C#</div>
                                        <div class="badge bg-primary rounded-pill">ASP.NET Core MVC</div>
                                        <div class="badge bg-primary rounded-pill">Bootstrap</div>
                                        <div class="badge bg-primary rounded-pill">Azure</div>
                                        <div class="badge bg-primary rounded-pill">Azure Boards, Deployment</div>
                                        <div class="badge bg-primary rounded-pill">Github Actions</div>
                                    </div>
                                    <p class="card-text">
                                        This website's blog! This will be an ongoing project where I post my insights and coding experiences.
                                        Intended to demonstrate building an MVC app from start to finish, deployed on my Azure tenant.
                                    </p>
                                </div>
                            </a>
                            <div class="card-footer bg-transparent mb-3">
                                <a class="btn btn-secondary btn-sm text-uppercase"
                                   href="https://github.com/GarryWest/MvcBlog"
                                   target="_blank">
                                    <span class="material-symbols-outlined me-1">code</span>
                                    Source Code
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
